var element_id = "#<%= escape_javascript("comment_#{@picpost.id}") %>";
$("body").append("<div id='comments_container'></div>");
$("#comments_container").css({
  'position': 'absolute',
  'background-color': '#ffffff',
  'border': '1px solid black',
  'padding': '5px',
  'width': '190px'
});
$("#comments_container").html("<%= escape_javascript render(partial: 'static_pages/comment_form_container', picpost: @picpost) %>");
$("#comments_container").css({
  'left': $(element_id).position().left - $("#comments_container").width()/2 + 15,
  'top': $(element_id).position().top - $("#comments_container").height() - 15,
});


