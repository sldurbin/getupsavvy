<%= form_for(current_user.comment_ratings.find_by_picture_comment_id(picture_comment.id), 
                         html: {id: "remove_thanks_form_#{picture_comment.id}", method: :delete}, remote: true) do |f| %>
  <%= f.hidden_field :picture_comment_id, :value => picture_comment.id %>
  <% form_name = "#remove_thanks_form_#{picture_comment.id}" %>
  <% submit_form = "$(\"#{form_name}\").submit();" %>
  <i class="icon-ok-circle" rel="tooltip" title="Undo Thanks" onclick="<%= submit_form %>"></i><br/>
<% end %>
